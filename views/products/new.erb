<h3>Add a New Product</h3>


<form method="post" action="/products">
<div class="form-wrapper">
  <label for="name-field">Product Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  />

<br><br>

  <label for="type-field">Type:</label><br>
  <select name="type" id="type-selection">
    <option value="Recycled Wool">Recycled Wool</option>
    <option value="Cashmere">Cashmere</option>
    <option value="Lambswool">Lambswool</option>
  </select>


<br><br>

  <label for="quantity-field">Quantity:</label>
  <input
  type="number"
  name="quantity"
  id="quantity-field"
  />

<br><br>

    <label for="buying-price-field">Buying Price:</label>
  <input
  type="number"
  step="0.01"
  name="buying_price"
  id="buying-price-field"
  />

<br><br>

    <label for="selling-price-field">Selling Price:</label>
  <input
  type="number"
  step="0.01"
  name="selling_price"
  id="selling-price-field"
  />

 <br><br>

  <label>
    Manufacturer:
    <select name="manufacturer_id">
      <% for manufacturer in @manufacturers %>
        <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
      <% end %>
    </select>
  </label>
<br><br>
  <input type="submit" value="Add Product">
  </div>
</form>





















